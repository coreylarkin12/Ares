@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Validation.Web.Models
@model  RegistrationViewModel

<h2>New User Registration </h2>

@using (Html.BeginForm("Register", "Users", FormMethod.Post))
{
    <div>
        @Html.LabelFor(m => m.FirstName, "First Name")
        @Html.TextBoxFor(m => m.FirstName)
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>
    <div>
        @Html.LabelFor(m => m.LastName, "Last Name")
        @Html.TextBoxFor(m => m.LastName)
        @Html.ValidationMessageFor(m => m.LastName)
    </div>
    <div>
        @Html.LabelFor(m => m.Email)
        @Html.EditorFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div>
        @Html.LabelFor(m => m.ConfirmEmail, "Confirm Email")
        @Html.EditorFor(m => m.ConfirmEmail)
        @Html.ValidationMessageFor(m => m.ConfirmEmail)
    </div>
    <div>
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div>
        @Html.LabelFor(m => m.ConfirmPassword, "Confirm")
        @Html.PasswordFor(m => m.ConfirmPassword)
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </div>
    <div>
        @Html.LabelFor(m => m.Birthday)
        @Html.EditorFor(m => m.Birthday)
        @Html.ValidationMessageFor(m => m.Birthday)
    </div>
    <div>
        @Html.LabelFor(m => m.NumOfTickets, "# of Tickets")
        @Html.EditorFor(m => m.NumOfTickets)
        @Html.ValidationMessageFor(m => m.NumOfTickets)
    </div>
    <br />
    <button>Submit</button>

}
